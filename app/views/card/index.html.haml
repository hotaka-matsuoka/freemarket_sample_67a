.mypage__main
  %h2.header__title
    お支払い方法
  .card__list
    %h3 クレジットカード一覧
    - if @card.present?
      .card__info
        %p.card__info--number
          = "**** **** **** " + @card_info.last4
        %p.card__info--expirarion-date
          = @exp_month + "/" + @exp_year
        = button_to "削除する", card_path(@card), method: :delete, class: "card__info--delete" 
    - else
      .new__card
        = link_to "クレジットカードを追加する", new_card_path, class: "new__card--btn"